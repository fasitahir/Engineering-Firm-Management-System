<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Ambala Engineering</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Navigation bar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img src="~/logo.png" alt="Ambala Engineering Logo" width="60" height="60">
                <span style="color: red;">Ambala</span>
                <span style="color: white;">Engineering</span>
            </a>

            <!-- Update the form to include IDs for the email and password input fields -->

            <ul class="nav nav-underline">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/Index">Home</a>
                </li>


                <li class="nav-item">
                    <a class="nav-link" href="/forms/aboutUs">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Contact Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Vision</a>
                </li>
                <li class="nav-item apply-now">
                    <a class="nav-link" href="/forms/ApplyNow">Apply Now</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/forms/Worker/WorkerHome">Workers</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-page="/forms/InventoryManager/IMHome">InventoryManager</a>
                </li>

            </ul>

        </div>
    </nav>

    <!-- Page content -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer">
        © @DateTime.Now.Year Ambala Engineering. All rights reserved.
    </footer>

    <!-- Optional: Include Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
