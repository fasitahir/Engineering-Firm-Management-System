@page
@model FinalProject.Pages.forms.ApplyNowModel
@{
}

<body style="background-color: #F0ECE5; color: #31304D;">
    <div class="container-fluid" style="min-height: 100vh;">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="text-center" style="margin-bottom: 40px;">
                    <h1 style="color: #31304D;">Apply Now</h1>
                </div>
                <form method="post" enctype="multipart/form-data" class="theform" action="" >
                    <div class="form-group row mb-3">
                        <label for="FirstName" class="col-sm-4 col-form-label">First Name:</label>
                        <div class="col-sm-8">
                            <input id="FirstName" type="text" class="form-control" placeholder="Enter First Name" asp-for="person.FirstName" maxlength="50" />
                            @if (!ModelState.IsValid && ModelState["person.FirstName"].Errors.Count > 0)
                            {
                                <p style="color: red;">Fill this box</p>
                            }


                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label for="LastName" class="col-sm-4 col-form-label">Last Name:</label>
                        <div class="col-sm-8">
                            <input id="LastName" type="text" class="form-control" placeholder="Enter Last Name" asp-for="person.LastName" maxlength="50" />

                            @if (!ModelState.IsValid && ModelState["person.LastName"].Errors.Count > 0)
                            {
                                <p style="color: red;">Fill this box</p>
                            }
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label for="Email" class="col-sm-4 col-form-label">Email:</label>
                        <div class="col-sm-8">
                            <input id="Email" type="text" class="form-control" placeholder="Enter Email" asp-for="person.Email" maxlength="255" />
                            @if (!ModelState.IsValid && ModelState["person.Email"].Errors.Count > 0)
                            {
                                <p style="color: red;">Fill this box</p>
                            }

                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label for="PrimaryPhone" class="col-sm-4 col-form-label">Primary Phone:</label>
                        <div class="col-sm-8">
                            <input id="PrimaryPhone" type="text" class="form-control" placeholder="Enter Primary Phone Number" asp-for="person.PrimaryPhone" maxlength="15" />
                            @if (!ModelState.IsValid && ModelState["person.PrimaryPhone"].Errors.Count > 0)
                            {
                                <p style="color: red;">Fill this box</p>
                            }
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label for="AlternatePhone" class="col-sm-4 col-form-label">Alternate Phone:</label>
                        <div class="col-sm-8">
                            <input id="AlternatePhone" type="text" class="form-control" placeholder="Enter Alternate Phone Number (optional)" asp-for="person.AlternatePhone" maxlength="15" />
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label for="Address" class="col-sm-4 col-form-label">Address:</label>
                        <div class="col-sm-8">
                            <textarea id="Address" class="form-control" placeholder="Enter Address" asp-for="person.Address"
                                      rows="4" maxlength="255"></textarea>
                            @if (!ModelState.IsValid && ModelState["person.Address"].Errors.Count > 0)
                            {
                                <p style="color: red;">Fill this box</p>
                            }
                        </div>

                    </div>



                    <div class="form-group row mb-3">
                        <label for="cnic" class="col-sm-4 col-form-label">CNIC:</label>
                        <div class="col-sm-8">
                            <input id="cnic" type="text" class="form-control" maxlength="13" placeholder="Enter CNIC" asp-for="person.CNIC" />
                            @if (!ModelState.IsValid && ModelState["person.CNIC"].Errors.Count > 0)
                            {
                                <p style="color: red;">Fill this box</p>
                            }
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label for="DateOfBirth" class="col-sm-4 col-form-label">Date of Birth:</label>
                        <div class="col-sm-8">
                            <input id="DateOfBirth" type="date" class="form-control" asp-for="person.DateOfBirth" />
                            @if (!ModelState.IsValid && ModelState["person.DateOfBirth"].Errors.Count > 0)
                            {
                                <p style="color: red;">@ModelState["person.DateOfBirth"].Errors.FirstOrDefault().ErrorMessage</p>
                            }
                        </div>
                    </div>


                    <div class="form-group row mb-3">
                        <label for="gender" class="col-sm-4 col-form-label">Gender:</label>
                        <div class="col-sm-8">
                            @Html.DropDownListFor(model => model.person.Gender, new List<SelectListItem>
                            {
                            new SelectListItem { Text = "Male", Value = "1" },
                            new SelectListItem { Text = "Female", Value = "2" }
                            }, "Select Gender", new { @class = "form-control" })
                        </div>
                    </div>


                    <div class="form-group row mb-3">
                        <label for="designation" class="col-sm-4 col-form-label">Desired Designation:</label>
                        <div class="col-sm-8">
                            @Html.DropDownListFor(model => model.person.DesiredDesignation, new List<SelectListItem>
                            {
                            new SelectListItem { Text = "Worker", Value = "3" },
                            new SelectListItem { Text = "Accountant", Value = "4" },
                            new SelectListItem { Text = "HR", Value = "5" },
                            new SelectListItem { Text = "Inventory Manager", Value = "6" }


                            }, "Select Gender", new { @class = "form-control" })
                        </div>
                    </div>


                    <div class="form-group row mb-3">
                        <label for="CV" class="col-sm-4 col-form-label">Upload CV (PDF):</label>
                        <div class="col-sm-8">
                            <input type="file" id="CV" name="person.CV" accept=".pdf" class="form-control-file" asp-for="person.CV"/>
                            @* @if (!ModelState.IsValid && Model.person.CV == null)
                            {
                                <p style="color: red;">Select CV</p>
                            } *@
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label for="Pic" class="col-sm-4 col-form-label">Upload Picture:</label>
                        <div class="col-sm-8">
                            <input type="file" id="Pic" name="Pic" class="form-control-file"  asp-for="person.Picture"/>
                            @* @if (!ModelState.IsValid && Model.person.Picture == null)
                            {
                                <p style="color: red;">Select Picture</p>
                            } *@
                        </div>
                    </div>


                        
                    <div class="form-group row mb-3">
                        <div class="col-sm-12 text-center">
                            <button type="submit" class="btn btn-primary" style="background-color: #161A30;">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

