@page
@model FinalProject.Pages.forms.InventoryManager.IM_ManageStockModel
@{
    Layout = "/Pages/Shared/_LayoutInventoryManager.cshtml";
}

<body style="background-color: #F0ECE5; color: #31304D;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="text-center" style="margin-bottom: 40px;">
                    <h1 style="color: #31304D;">Apply Now</h1>
                </div>
                <form method="post">
                    <div class="form-group row mb-3">
                        <label for="ItemName" class="col-sm-4 col-form-label">Item Name:</label>
                        <div class="col-sm-8">
                            <input id="ItemName" type="text" class="form-control" placeholder="Enter Item Name" asp-for="item.ItemName" maxlength="50" />
                            @if (!ModelState.IsValid && ModelState["Item.ItemName"].Errors.Count > 0)
                            {
                                <p style="color: red;">Fill this box</p>
                            }


                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label for="Description" class="col-sm-4 col-form-label">Description:</label>
                        <div class="col-sm-8">
                            <textarea id="Description" class="form-control" placeholder="Enter Description" asp-for="item.Description"
                                      rows="4" maxlength="300"></textarea>
                            @if (!ModelState.IsValid && ModelState["item.Description"].Errors.Count > 0)
                            {
                                <p style="color: red;">Fill this box</p>
                            }
                        </div>

                    </div>


                    <div class="form-group row mb-3">
                        <label for="MeasurementUnit" class="col-sm-4 col-form-label">Measurement Unit:</label>
                        <div class="col-sm-8">
                            <input id="MeasurementUnit" type="text" class="form-control" placeholder="Enter Measurement Unit of item" asp-for="item.MeasurementUnit" maxlength="50" />
                            @if (!ModelState.IsValid && ModelState["item.MeasurementUnit"].Errors.Count > 0)
                            {
                                <p style="color: red;">Fill this box</p>
                            }

                        </div>
                    </div>


                    <div class="form-group row mb-3">
                        <label for="SalePrice" class="col-sm-4 col-form-label">Sale Price:</label>
                        <div class="col-sm-8">
                            <input id="SalePrice" type="text" class="form-control" placeholder="Enter Sale Price of item" asp-for="item.SalePrice" maxlength="10" />
                            @if (!ModelState.IsValid && ModelState["item.Sale"].Errors.Count > 0)
                            {
                                <p style="color: red;">Fill this box</p>
                            }

                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label for="CostPrice" class="col-sm-4 col-form-label">Cost Price:</label>
                        <div class="col-sm-8">
                            <input id="CostPrice" type="text" class="form-control" placeholder="Enter Cost Price of item" asp-for="stock.CostPrice" maxlength="10" />
                            @if (!ModelState.IsValid && ModelState["stock.CostPrice"].Errors.Count > 0)
                            {
                                <p style="color: red;">Fill this box</p>
                            }

                        </div>
                    </div>
                    
                    <div class="form-group row mb-3">
                        <label for="ArrivalQuantity" class="col-sm-4 col-form-label">Arrival Quantity:</label>
                        <div class="col-sm-8">
                            <input id="ArrivalQuantity" type="text" class="form-control" placeholder="Enter Arrival Quantity of item" asp-for="stock.InitialQuantity" maxlength="10" />
                            @if (!ModelState.IsValid && ModelState["stock.InitialQuantity"].Errors.Count > 0)
                            {
                                <p style="color: red;">Fill this box</p>
                            }

                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label for="ArrivalTime" class="col-sm-4 col-form-label">Arrival Time:</label>
                        <div class="col-sm-8">
                            <input id="ArrivalTime" type="datetime-local" class="form-control" asp-for="stock.ArrivalDate" />
                            @if (!ModelState.IsValid && ModelState["stock.ArrivalDate"].Errors.Count > 0)
                            {
                                <p style="color: red;">@ModelState["stock.ArrivalDate"].Errors.FirstOrDefault().ErrorMessage</p>
                            }
                        </div>
                    </div>
                </form>



            </div>
        </div>

        <div class="row mt-5">
            <div class="col-md-12">
                <h2 class="text-center mb-3">Stock Details</h2>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Item Name</th>
                                <th>Description</th>
                                <th>Measurement Unit</th>
                                <th>Sale Price</th>
                                <th>Cost Price</th>
                                <th>Arrival Quantity</th>
                                <th>Arrival Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            @* @foreach (var stockDetail in Model.StockDetails)
                            {
                            <tr>
                            <td>@stockDetail.ItemName</td>
                            <td>@stockDetail.Description</td>
                            <td>@stockDetail.MeasurementUnit</td>
                            <td>@stockDetail.SalePrice</td>
                            <td>@stockDetail.CostPrice</td>
                            <td>@stockDetail.InitialQuantity</td>
                            <td>@stockDetail.ArrivalDate</td>
                            </tr>
                            } *@
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>
