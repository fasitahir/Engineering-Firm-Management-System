@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4 d-flex justify-content-end">
    <form class="form-inline" method="post" action="">
        <div class="form-group mr-2">
            <input type="text" name="userName" class="form-control" placeholder="Username" asp-for="credential.userName">
        </div>
        <div class="form-group mr-2">
            <input type="password" name="password" id="password" class="form-control" placeholder="Password" asp-for="credential.password">
        </div>

        <div class="form-check mr-2">
            <input type="checkbox" id="showPassword" class="form-check-input">
            <label class="form-check-label" for="showPassword">Show Password</label>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div>

<style>
    /* Adjust spacing between form elements */
    .form-group {
        margin-bottom: 0;
    }

    /* Add some space between checkbox and label */
    .form-check-label {
        margin-left: 5px;
    }
</style>

<script>
    // Get the checkbox and password input field
    const showPasswordCheckbox = document.getElementById('showPassword');
    const passwordInput = document.getElementById('password');

    // Add event listener to the checkbox
    showPasswordCheckbox.addEventListener('change', function () {
        // If the checkbox is checked, show the password
        if (this.checked) {
            passwordInput.type = 'text';
        } else {
            // Otherwise, hide the password
            passwordInput.type = 'password';
        }
    });
</script>

